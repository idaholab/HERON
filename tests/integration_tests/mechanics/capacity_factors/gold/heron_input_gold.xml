<HERON>
  <TestInfo>
    <name>capacity_factor_gold</name>
    <author>sotogj</author>
    <created>2023-03-15</created>
    <description>
      Script used to generate gold data. This was the old way of implementing capacity factors
      for a wind farm: the synthetic history is the capacity, the multiplier represents the actual
      nameplate capacity.
    </description>
    <classesTested>HERON</classesTested>
  </TestInfo>

  <Case name="wind_20">
    <mode>sweep</mode>
    <num_arma_samples>3</num_arma_samples>
    <time_discretization>
      <time_variable>Time</time_variable>
      <end_time>2</end_time>
      <num_steps>21</num_steps>
    </time_discretization>
    <economics>
      <ProjectTime>3</ProjectTime>
      <DiscountRate>0.08</DiscountRate>
      <tax>0.1</tax>
      <inflation>0.1</inflation>
      <verbosity>50</verbosity>
    </economics>
    <dispatcher>
      <pyomo/>
    </dispatcher>
  </Case>


  <Components>
    <Component name="wind">
      <produces resource="electricity" dispatch="independent">
        <capacity resource="electricity">
          <CSV variable="Signal">synth</CSV>
          <!-- NOTE: if you change this multiplier, also change the capex driver
                      fixed value for this component!  -->
          <!-- LOOP: 10, 20-->
          <multiplier>20</multiplier> <!-- CHANGE ME -->
        </capacity>
      </produces>
      <economics>
        <lifetime>5</lifetime>
        <!-- construction cost -->
        <CashFlow name="capex" type="one-time" taxable="True" inflation="none">
          <driver>
             <!-- LOOP: 10, 20-->
            <fixed_value>20</fixed_value> <!-- CHANGE ME TOO -->
          </driver>
          <reference_price>
            <!-- 1470 $/kW * 1e6 kW/GW = 1.47e9 est cost for 1 GW wind -->
            <!-- adjust for short project length-->
            <fixed_value>-1.47e8</fixed_value>
          </reference_price>
        </CashFlow>
      </economics>
    </Component>


    <Component name="npp">
      <produces resource="electricity" dispatch="independent">
        <capacity resource="electricity">
          <sweep_values>0, 20</sweep_values> <!-- NOTE: will just using the 20 value -->
        </capacity>
      </produces>
      <economics>
        <lifetime>10</lifetime>
        <!-- construction cost -->
        <CashFlow name="capex" type="one-time" taxable="True" inflation="none">
          <driver>
            <variable>npp_capacity</variable>
          </driver>
          <reference_price>
            <!-- $3000/kW * 1e6 kW/GW, but note reduced project length -->
            <fixed_value>-3e8</fixed_value>
          </reference_price>
        </CashFlow>
        <CashFlow name="var_OM" type="repeating" taxable='True' inflation='none'>
          <driver>
            <activity>electricity</activity>
            <multiplier>-1</multiplier>
          </driver>
          <reference_price>
            <!-- from Lazard (2019) -  3.5 $/MWh * 1e3 MWh/GWh -->
            <fixed_value>3.5e3</fixed_value>
          </reference_price>
        </CashFlow>
      </economics>
    </Component>


    <Component name="grid">
      <demands resource="electricity" dispatch="fixed">
        <capacity>
          <fixed_value>35</fixed_value>
          <multiplier>-1</multiplier>
        </capacity>
      </demands>
      <economics>
        <lifetime>1</lifetime>
        <CashFlow name="e_sales" type="repeating" taxable='True' inflation='none'>
          <driver>
            <activity>electricity</activity>
            <multiplier>-1</multiplier>
          </driver>
          <reference_price>
            <fixed_value>50e3</fixed_value>
          </reference_price>
        </CashFlow>
      </economics>
    </Component>


    <Component name="import">
      <produces resource="electricity" dispatch="independent">
        <capacity resource="electricity">
          <fixed_value>100</fixed_value>
        </capacity>
      </produces>
      <economics>
        <lifetime>1</lifetime>
        <CashFlow name="import" type="repeating" taxable='True' inflation='none'>
          <driver>
            <activity>electricity</activity>
            <multiplier>-1</multiplier>
          </driver>
          <reference_price>
            <fixed_value>1e6</fixed_value>
          </reference_price>
        </CashFlow>
      </economics>
    </Component>


    <Component name="export">
      <demands resource="electricity" dispatch="independent">
        <capacity>
          <fixed_value>-100</fixed_value> <!-- GW -->
        </capacity>
      </demands>
      <economics>
        <lifetime>1</lifetime>
        <CashFlow name="export" type="repeating" taxable='True' inflation='none'>
          <driver>
            <activity>electricity</activity>
          </driver>
          <reference_price>
            <fixed_value>1e6</fixed_value>
          </reference_price>
        </CashFlow>
      </economics>
    </Component>

  </Components>


  <DataGenerators>
    <CSV name='synth' variable="Signal">%BASE_WORKING_DIR%/../../Static.csv</CSV>
  </DataGenerators>

</HERON>
