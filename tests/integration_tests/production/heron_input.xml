<HERON>
  <TestInfo>
    <name>MultiMarketFixedPrice</name>
    <author>gaira</author>
    <created>2019-12-12</created>
    <description>
      Tests HERON creating workflows and running with a fixed deregulated market price.
    </description>
    <classesTested>HERON</classesTested>
    <requirements>H-EA-3</requirements>
  </TestInfo>

  <Case name="Sweep_Runs">
    <!--
    <mode>sweep</mode>
    <metric>NPV</metric>
    -->
    <num_arma_samples>2</num_arma_samples>
    <timestep_interval>1</timestep_interval> <!-- unit=seconds -->
    <history_length>20</history_length>
    <economics>
      <ProjectTime>3</ProjectTime>
      <DiscountRate>0.08</DiscountRate>
      <tax>0.0</tax>
      <inflation>0.0</inflation>
      <verbosity>50</verbosity>
    </economics>
    <dispatcher>
      <type>pyomo</type>
      <increment resource="electricity">1e6</increment> <!-- MW -->
    </dispatcher>
  </Case>

  <Components>
    <Component name="steamer">
      <produces resource="steam" dispatch="fixed">
        <capacity resource="steam">
          <sweep_values>10, 100</sweep_values>
        </capacity>
        <transfer>
          <linear>
            <rate resource="steam">1</rate>
          </linear>
        </transfer>
      </produces>
      <economics>
        <lifetime>27</lifetime>
      </economics>
    </Component>

    <Component name="generator">
      <produces resource="electricity" dispatch="independent">
        <capacity resource="steam">
          <fixed_value>100</fixed_value>
        </capacity>
        <transfer>
          <linear>
            <rate resource="steam">-1</rate>
            <rate resource="electricity">0.5</rate>
          </linear>
        </transfer>
      </produces>
      <economics>
        <lifetime>27</lifetime>
      </economics>
    </Component>

    <Component name="electr_market">
      <demands resource="electricity" dispatch="dependent"><!---->
        <capacity>
          <fixed_value>-2</fixed_value>
        </capacity>
      </demands>
      <economics>
        <lifetime>3</lifetime>
        <CashFlow name="e_sales" type="repeating" taxable='True' inflation='none' mult_target='False'>
          <driver>
            <Function method="electric_consume">transfers</Function>
          </driver>
          <reference_price>
            <fixed_value>1</fixed_value>
          </reference_price>
          <reference_driver>
            <fixed_value>1</fixed_value>
          </reference_driver>
          <scaling_factor_x>
            <fixed_value>1</fixed_value>
          </scaling_factor_x>
        </CashFlow>
      </economics>
    </Component>

    <Component name="electr_penalty">
      <demands resource="electricity" dispatch="dependent">
        <capacity>
          <fixed_value>-1e200</fixed_value>
        </capacity>
      </demands>
      <economics>
        <lifetime>3</lifetime>
        <CashFlow name="e_sales" type="repeating" taxable='True' inflation='none' mult_target='False'>
          <driver>
            <Function method="electric_consume">transfers</Function>
          </driver>
          <reference_price>
            <fixed_value>-1</fixed_value>
          </reference_price>
          <reference_driver>
            <fixed_value>1</fixed_value>
          </reference_driver>
          <scaling_factor_x>
            <fixed_value>1</fixed_value>
          </scaling_factor_x>
        </CashFlow>
      </economics>
    </Component>

  </Components>

  <DataGenerators>
    <ARMA name='Speed' variable="Signal">../ARMA/Sine/arma.pk</ARMA>
    <Function name="transfers">transfers.py</Function> <!-- TODO specify the variables needed? -->
  </DataGenerators>

</HERON>
