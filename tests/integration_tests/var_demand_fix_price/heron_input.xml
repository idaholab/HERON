<HERON>
  <TestInfo>
    <name>VarDemandFixedPrice</name>
    <author>gaira</author>
    <created>2019-12-12</created>
    <description>
      Tests HERON creating workflows and running with a variable demand but fixed market price.
    </description>
    <classesTested>HERON</classesTested>
    <requirements>H-F-1 H-F-2 H-EA-1 H-SI-1</requirements>
  </TestInfo>

  <Case name="Sweep_Runs">
    <mode>sweep</mode>
    <metric>NPV</metric>
    <num_arma_samples>2</num_arma_samples>
    <timestep_interval>500</timestep_interval>
    <Resample_T>60</Resample_T><!--New History length-->
    <history_length>20</history_length>
    <economics>
      <ProjectTime>2</ProjectTime>
      <DiscountRate>0.08</DiscountRate>
      <tax>0.0</tax>
      <inflation>0.0</inflation>
      <verbosity>50</verbosity>
    </economics>
    <dispatch_increment resource="electricity">1e6</dispatch_increment>
  </Case>

  <Components>
    <Component name="BOP">
      <produces resource="electricity" dispatch="fixed">
        <capacity resource="electricity">
          <sweep_values>1095,1098</sweep_values>
        </capacity>
            <transfer>
           <Function method="power_conversion">transfer</Function>
         </transfer>
      </produces>
      <economics>
        <lifetime>27</lifetime>
      </economics>
    </Component>

    <Component name="Electric_Grid">
      <demands resource="electricity" dispatch="independent">
        <capacity>
          <fixed_value>1e200</fixed_value>
        </capacity>
      </demands>
      <economics>
        <lifetime>3</lifetime>
        <CashFlow name="e_sales" type="repeating" taxable='True' inflation='none' mult_target='False'>
          <driver>
		        <Function method="electric_source">transfer</Function>
          </driver>
          <reference_price>
            <fixed_value>0.1</fixed_value>
          </reference_price>
          <reference_driver>
            <fixed_value>1</fixed_value>
          </reference_driver>
          <scaling_factor_x>
            <fixed_value>1</fixed_value>
          </scaling_factor_x>
        </CashFlow>
      </economics>
    </Component>

  </Components>


  <DataGenerators>
  <ARMA name='Speed' variable="Signal">/ARMA/interpolated.pk</ARMA>
  <Resampling_time name='sampling' variable="dt">500</Resampling_time>
  <Function name="transfer">transfers.py</Function>
  </DataGenerators>

</HERON>