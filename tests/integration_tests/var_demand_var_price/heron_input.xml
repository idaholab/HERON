<HERON>
  <TestInfo>
    <name>VarDemandVarPrice</name>
    <author>gaira</author>
    <created>2019-12-12</created>
    <description>
      Tests HERON for a variable demand and variable price.
    </description>
    <classesTested>HERON</classesTested>
    <requirements>H-EA-2</requirements>
  </TestInfo>

  <Case name="Sweep_Runs">
    <!--
    <mode>sweep</mode>
    <metric>NPV</metric>
    -->
    <num_arma_samples>2</num_arma_samples>
    <timestep_interval>1</timestep_interval> <!-- unit=seconds -->
    <history_length>20</history_length>
    <economics>
      <ProjectTime>3</ProjectTime>
      <DiscountRate>0.08</DiscountRate>
      <tax>0.0</tax>
      <inflation>0.0</inflation>
      <verbosity>50</verbosity>
    </economics>
    <dispatcher>
      <increment resource="electricity">1e6</increment> <!-- MW -->
    </dispatcher>
  </Case>

  <Components>
    <Component name="BOP">
      <produces resource="electricity" dispatch="fixed">
        <capacity resource="electricity">
          <sweep_values>1095,1098</sweep_values>
        </capacity>
        <transfer>
          <Function method="power_conversion">transfers</Function>
        </transfer>
      </produces>
      <economics>
        <lifetime>27</lifetime>
      </economics>
    </Component>

    <Component name="Electric_Grid">
      <demands resource="electricity" dispatch="independent"><!---->
        <capacity>
          <fixed_value>1e200</fixed_value>
        </capacity>
      </demands>
      <economics>
        <lifetime>3</lifetime>
        <CashFlow name="e_sales" type="repeating" taxable='True' inflation='none' mult_target='False'>
          <driver>
            <Function method="electric_source">transfers</Function>
          </driver>
          <reference_price>
            <ARMA variable="Signal">Speed</ARMA>
          </reference_price>
          <reference_driver>
            <fixed_value>1</fixed_value>
          </reference_driver>
          <scaling_factor_x>
            <fixed_value>1</fixed_value>
          </scaling_factor_x>
        </CashFlow>
      </economics>
    </Component>

  </Components>

  <DataGenerators>
    <ARMA name='Speed' variable="Signal">../ARMA/Sine/arma.pk</ARMA>
    <Function name="transfers">transfers.py</Function>
  </DataGenerators>

</HERON>
