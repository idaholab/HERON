<HERON>
  <TestInfo>
    <name>IES</name>
    <author>dylanjm</author>
    <created>2023-03-07</created>
    <description>
      Simple workshop case detailing a full IES with secondary resource market and storage components.
    </description>
    <classesTested>HERON</classesTested>
  </TestInfo>

  <Case name="IES">
    <mode>sweep</mode>
    <debug/>
    <num_arma_samples>20</num_arma_samples>
    <time_discretization>
      <year_variable>YEAR</year_variable>
      <time_variable>HOUR</time_variable>
      <end_time>23</end_time>
      <num_steps>24</num_steps>
    </time_discretization>
    <economics>
      <ProjectTime>3</ProjectTime>
      <DiscountRate>0.08</DiscountRate>
      <tax>0.3</tax>
      <inflation>0.06</inflation>
      <verbosity>50</verbosity>
    </economics>
    <dispatcher>
      <pyomo/>
    </dispatcher>
  </Case>

  <Components>
    <Component name="npp">
      <produces resource="steam" dispatch="independent">
        <capacity resource="steam">
          <sweep_values>30, 50</sweep_values>
        </capacity>
      </produces>
      <economics>
        <lifetime>5</lifetime>
        <!-- construction cost -->
        <CashFlow name="capex" type="one-time" taxable="True" inflation="none" mult_target="False">
          <driver>
            <variable>npp_capacity</variable>
          </driver>
          <reference_price>
            <fixed_value>-3e8</fixed_value> <!-- $3000/kW * 1e6 kW/GW, but note reduced project length -->
          </reference_price>
        </CashFlow>
        <CashFlow name="var_OM" type="repeating" taxable='True' inflation='none' mult_target='False'>
          <driver>
            <activity>steam</activity>
            <multiplier>-1</multiplier>
          </driver>
          <reference_price>
            <fixed_value>13e3</fixed_value> <!-- ballpark $/MWh -->
          </reference_price>
        </CashFlow>
      </economics>
    </Component>

    <Component name="turbine">
      <!-- Indpendent & Dependent dispatch are currently the same thing -->
      <!-- This needs to be fixed to be flexible -->
      <produces resource="electricity" dispatch="independent">
        <consumes>steam</consumes>
        <capacity resource="electricity">
          <fixed_value>100</fixed_value>
        </capacity>
        <transfer>
          <linear>
            <rate resource="steam">-1</rate>
            <rate resource="electricity">0.33</rate>
          </linear>
        </transfer>
      </produces>
      <economics>
        <lifetime>5</lifetime>
      </economics>
    </Component>

    <Component name="wind">
      <produces resource="electricity" dispatch="independent">
        <capacity resource="electricity">
          <ARMA variable="WIND">synth</ARMA>
          <multiplier>10</multiplier>
        </capacity>
      </produces>
      <economics>
        <lifetime>5</lifetime>
        <!-- construction cost -->
        <CashFlow name="capex" type="one-time" taxable="True" inflation="none" mult_target="False">
          <driver>
            <fixed_value>10</fixed_value> <!-- CHANGE ME TOO -->
          </driver>
          <reference_price>
            <!-- 1470 $/kW * 1e6 kW/GW = 1.47e9 est cost for 1 GW wind -->
            <!-- adjust for short project length-->
            <fixed_value>-1.47e8</fixed_value>
          </reference_price>
        </CashFlow>
      </economics>
    </Component>

    <Component name="HTSE">
      <produces resource="H2" dispatch="independent">
        <capacity resource="H2">
          <sweep_values>10, 20</sweep_values> <!-- Change Me -->
        </capacity>
        <consumes>electricity,steam</consumes>
        <transfer>
          <linear>
            <rate resource="steam">-0.17</rate>
            <rate resource="electricity">-1</rate>
            <rate resource="H2">29.31</rate>
          </linear>
        </transfer>
      </produces>
      <economics>
        <lifetime>5</lifetime>
        <CashFlow name="capex" type="one-time" taxable="True" inflation="none" mult_target="False">
          <driver>
            <variable>HTSE_capacity</variable>
          </driver>
          <reference_price>
            <fixed_value>-545263737</fixed_value>
          </reference_price>
        </CashFlow>
        <CashFlow name="fixed_OM" type="repeating" period="year" taxable="True" inflation="none" mult_target="False">
          <driver>
            <variable>HTSE_capacity</variable>
          </driver>
          <reference_price>
            <fixed_value>-70752705</fixed_value>
          </reference_price>
        </CashFlow>
      </economics>
    </Component>

    <Component name="H2_storage">
      <stores resource="H2" dispatch="independent">
        <capacity resource="H2">
          <sweep_values>5, 10</sweep_values>
        </capacity>
        <initial_stored>
          <fixed_value>0</fixed_value>
        </initial_stored>
      </stores>
      <economics>
        <lifetime>5</lifetime>
        <CashFlow name="capex" type="one-time" taxable="True" inflation="none" mult_target="False">
          <driver>
            <variable>H2_storage_capacity</variable>
          </driver>
          <reference_price>
            <fixed_value>-550</fixed_value>
          </reference_price>
        </CashFlow>
      </economics>
    </Component>

    <Component name="grid">
      <demands resource="electricity" dispatch="fixed">
        <capacity>
          <ARMA variable="TOTALLOAD">synth</ARMA>
          <multiplier>-1</multiplier>
        </capacity>
      </demands>
      <economics>
        <lifetime>5</lifetime>
        <CashFlow name="e_sales" type="repeating" taxable='True' inflation='none' mult_target='False'>
          <driver>
            <activity>electricity</activity>
          </driver>
          <reference_price>
            <fixed_value>50e3</fixed_value>
          </reference_price>
        </CashFlow>
      </economics>
    </Component>

    <Component name="H2_market">
      <demands resource="H2" dispatch="fixed">
        <capacity>
          <fixed_value>10</fixed_value>
          <multiplier>-1</multiplier>
        </capacity>
      </demands>
      <economics>
        <lifetime>5</lifetime>
        <CashFlow name="H2_sales" type="repeating" taxable="True" inflation="none" mult_target="False">
          <driver>
            <activity>H2</activity>
            <multiplier>-1</multiplier>
          </driver>
          <reference_price>
            <fixed_value>100</fixed_value> <!-- Change me -->
          </reference_price>
        </CashFlow>
      </economics>
    </Component>

  </Components>


  <DataGenerators>
    <ARMA name='synth' variable="TOTALLOAD,WIND">%HERON%/tests/integration_tests/ARMA/NYISO/nyiso_arma_2yr.pk</ARMA>
  </DataGenerators>

</HERON>
